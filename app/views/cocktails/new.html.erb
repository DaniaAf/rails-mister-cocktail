<div class= "cocktail_banner">
  <h1>Create a new cocktail</h1>
</div>

<div class= "input">
  <%= simple_form_for @cocktail do |f| %>
    <div class="form">
      <%= f.input :name%>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit class: 'btn btn-primary'%>
      <br>
      <br>
      <div class ="btn btn-primary"> <%= link_to 'back to cocktails', cocktails_path %> </div>
    <% end %>
  </div>
</div>
