<div class="cocktail_banner">
  <h1> <%= @cocktail.name %></h1>
</div>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %>
    <%= Ingredient.find(dose.ingredient_id).name %>
    <%= link_to 'delete ?', dose_path(dose), method: :delete %>
    </li>
  <% end %>
</ul>

<div class="input">
  <%= simple_form_for [@cocktail, @dose] do |f| %>
  <div class= "form">
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit "add description", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<%= link_to 'back to cocktails', cocktails_path %>


